@model List<BasketItemDto>

@{
    decimal shippingFee = 30.00m;
    decimal totalProductPrice = Model.Sum(item => item.Price * item.Quantity);
    decimal totalTax = totalProductPrice * 0.10m;
    decimal grandTotal = totalProductPrice + totalTax + shippingFee;
}

<h5 class="section-title position-relative text-uppercase mb-3">
    <span class="bg-secondary pr-3">Sipariş Özeti</span>
</h5>



<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sipariş Ürün Listesi</h6>
        @foreach (var item in Model)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName (@item.Quantity * @item.Price ₺)</p>
                <h6>@(item.Price * item.Quantity) ₺</h6>
            </div>
        }
    </div>

    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Alışveriş Tutarı (KDV hariç)</h6>
            <h6>@totalProductPrice.ToString("F2") ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6>KDV (10%)</h6>
            <h6>@totalTax.ToString("F2") ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">@shippingFee.ToString("F2") ₺</h6>
        </div>
    </div>

    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>@grandTotal.ToString("F2") ₺</h5>
        </div>
    </div>
</div>
