@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Döviz Kurları </title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-header bg-success text-white">
                        <h4>Dolar Kuru</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Alış: <strong>@ViewBag.UsdExchangeRate</strong></p>
                        <p class="card-text">Satış: <strong>@ViewBag.UsdPreviousClose</strong></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mt-3 mt-md-0">
                <div class="card text-center">
                    <div class="card-header bg-info text-white">
                        <h4>Euro Kuru</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Alış: <strong>@ViewBag.EurExchangeRate</strong></p>
                        <p class="card-text">Satış: <strong>@ViewBag.EurPreviousClose</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
