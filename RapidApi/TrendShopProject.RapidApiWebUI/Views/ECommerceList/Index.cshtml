@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ürün Arama Sonuçları</title>
    <style>
        .table-container {
            overflow-x: auto;
        }

        .product-image {
            max-width: 120px;
            height: auto;
        }

        .action-buttons a {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Ürün Arama Sonuçları</h2>
        <div class="table-container">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Ürün Görseli</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Fiyat</th>
                        <th>Değerlendirme</th>
                        <th>İncelemeler</th>
                        <th>Mağaza</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.products != null && Model.products.Length > 0)
                    {
                        @foreach (var product in Model.products)
                        {
                            <tr>
                                <td>
                                    @if (product.product_photos != null && product.product_photos.Length > 0)
                                    {
                                        <img src="@product.product_photos[0]" alt="Ürün Görseli" class="img-thumbnail product-image">
                                    }
                                </td>
                                <td>@product.product_title</td>
                                <td>@product.product_description</td>
                                <td>
                                    @if (product.offer != null)
                                    {
                                        <span class="text-success">@product.offer.price</span>
                                    }
                                </td>
                                <td>@product.product_rating</td>
                                <td>@product.product_num_reviews</td>
                                <td>@product.offer?.store_name</td>
                                <td class="action-buttons">
                                    <a href="@product.product_page_url" class="btn btn-primary btn-sm w-100 mb-2" target="_blank">Görüntüle</a>
                                    <a href="@product.offer?.offer_page_url" class="btn btn-success btn-sm w-100" target="_blank">Satın Al</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">Ürün bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
